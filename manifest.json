{
  "manifest_version": 3,
  "name": "BoardID Pinterest Finder",
  "version": "1.0.0",
  "description": "Descubra o ID num√©rico de qualquer board do Pinterest instantaneamente.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.pinterest.com/*", "*://*.pinterest.pt/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*", "*://*.pinterest.pt/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}